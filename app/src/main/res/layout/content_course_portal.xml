<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/useroption"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.westga.tamikowilliamsattendancerepairapp.UIActivity.CoursePortalActivity"
    tools:showIn="@layout/activity_course_portal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selectedCourseTxt"
        android:id="@+id/selectCourseTxt"
        android:textColor="#84970e"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/spinner"
        android:textSize="35dp"
        android:textColor="#84970e"
        android:layout_below="@+id/selectCourseTxt"
        android:layout_centerHorizontal="true"
        android:popupBackground="#fefefd"
        android:gravity="fill_horizontal|center_horizontal"
        android:dropDownWidth="150dp"
        android:spinnerMode="dialog" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selectCourseBtn"
        android:id="@+id/selectCourseBtn"
        android:layout_below="@+id/spinner"
        android:layout_alignLeft="@+id/selectCourseTxt"
        android:layout_alignStart="@+id/selectCourseTxt"
        android:onClick="click_Select" />



</RelativeLayout>
